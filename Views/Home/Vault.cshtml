@{
    ViewData["Title"] = "Vaults";
}

@model List<Vault>

<!-- Inline CSS for Pip Boy styling -->
<style>
    /* Container styling to mimic a console screen */
    .pipboy-container {
        background-color: #000;
        color: #0f0;
        font-family: 'Courier New', Courier, monospace;
        padding: 20px;
        border: 3px solid #0f0;
        border-radius: 5px;
        box-shadow: 0 0 10px #0f0;
    }
    /* Header styling */
    .pipboy-header {
        text-align: center;
        margin-bottom: 20px;
        text-shadow: 0 0 5px #0f0;
    }
    /* Table styling */
    .pipboy-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    .pipboy-table th,
    .pipboy-table td {
        border: 1px solid #0f0;
        padding: 10px;
        text-align: center;
    }
    .pipboy-table th {
        background-color: #111;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    /* Button styling */
    .pipboy-btn {
        font-family: 'Courier New', Courier, monospace;
        border: 1px solid #0f0;
        color: #0f0;
        background-color: #000;
        padding: 10px 20px;
        margin: 5px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .pipboy-btn:hover {
        background-color: #0f0;
        color: #000;
    }
</style>

<div class="container my-5 pipboy-container">
    <!-- Header Section -->
    <div class="pipboy-header">
        <h1 class="display-4">Vaults</h1>
        <p class="lead">Manage your Vault network in true Pip-Boy style.</p>
        <h2>Total Vaults: @ViewData["TotalVaults"]</h2>
    </div>

    <!-- Action Button -->
    <div class="text-end mb-4">
        <a asp-action="CreateEditVault" class="pipboy-btn">
            <i class="bi bi-plus"></i> Add Vault
        </a>
    </div>

    <!-- Responsive Table -->
    <div class="table-responsive">
        <table class="pipboy-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vault in Model)
                {
                    <tr>
                        <td>@vault.Name</td>
                        <td>@vault.Location</td>
                        <td>
                            <a asp-action="CreateEditVault" asp-route-id="@vault.Id" class="pipboy-btn">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="DeleteVault" asp-route-id="@vault.Id" class="pipboy-btn">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
