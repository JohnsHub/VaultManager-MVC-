@{
    ViewData["Title"] = "Vaults";
}

@model List<Vault>

<div class="text-center">
    <h1 class="display-4">Vaults</h1>
    <br />
    <h2>Total Vaults: @ViewData["TotalVaults"]</h2>
    <table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vault in Model)
        {
            <tr>
                <td>@vault.Name</td>
                <td>@vault.Location</td>
                <td>
                    <a asp-action="CreateEditVault" asp-route-id="@vault.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                    <a asp-action="DeleteVault" asp-route-id="@vault.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreateEditVault" class="btn btn-primary"><i class="bi bi-plus"></i> Add Vault</a>

</div>